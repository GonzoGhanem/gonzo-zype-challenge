<div class="row">
  <div class="col-12 col-lg-2 offset-lg-5">
    <%= form_with(url: login_path, method: :post, local: true) do %>
      <div class="form-group">
        <label for="email">Email address</label>
        <%= text_field_tag(:email, nil, class: 'form-control') %>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <%= password_field_tag(:password, nil, class: 'form-control') %>
      </div>
      <%= submit_tag("Login", class: "btn btn-primary btn-block btn-lg") %>
      <%= link_to("Take me back to videos as a guest", videos_path, class: "btn btn-secondary btn-block btn-sm") %>
    <% end %>
  </div>
</div>